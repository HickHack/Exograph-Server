doctype html
html(lang='en')
    head
        include ../layout/head
        link(href='css/auth.css', rel='stylesheet', type='text/css')
        link(href='css/base.css', rel='stylesheet', type='text/css')

        title #{title}

    body
        include ../layout/basic-header

        .container
            .row
                .col-md-4.col-lg-4.col-md-4.col-lg-offset-4
                    .auth-panel.panel.panel-default
                        .panel-heading
                            h3.panel-title Please Sign In
                        .panel-body
                            form(action='/login' role='form', method='POST')
                                fieldset
                                    .form-group
                                        input.form-control(placeholder='E-mail', name='email', type='email', autofocus='', value=email)
                                    .form-group
                                        input.form-control(placeholder='Password', name='password', type='password', value='')

                                    p.error.text-center #{message}

                                    button.btn.btn-lg.btn-success.btn-block(type='submit') Login

                                    p.text-center.existingLink Don't have an account?&nbsp
                                        a(href='/register') Sign up