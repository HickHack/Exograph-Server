doctype html
html(lang='en')
    head
        include ../layout/head

        title #{title}

    body
        include ../layout/basic-header

        .container
            .row
                .col-md-4.col-md-offset-4
                    .login-panel.panel.panel-default
                        .panel-heading
                            h3.panel-title Please Sign In
                        .panel-body
                            form(action='/login' role='form', method='POST')
                                fieldset
                                    .form-group
                                        input.form-control(placeholder='E-mail', name='email', type='email', autofocus='')
                                    .form-group
                                        input.form-control(placeholder='Password', name='password', type='password', value='')
                                    .checkbox
                                        label
                                            input(name='remember', type='checkbox', value='Remember Me')
                                            | Remember Me
                                    // Change this to a button or input when using this as a form
                                    button.btn.btn-lg.btn-success.btn-block(type='submit') Login
                        p.text-center
                            a(href='register') Register
