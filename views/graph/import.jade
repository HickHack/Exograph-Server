doctype html

head
    include ../layout/head
    link(href='/css/import.css', rel='stylesheet', type='text/css')
    script(src='/js/job-launch.js', type='text/javascript')

    title #{title}

body
    #wrapper
        include ../layout/navigation

        #page-wrapper
            .container-fluid.import-container
                include ../layout/pageHeader

                .row
                    // Modal
                    #jobModal.modal.fade(role='dialog')
                        .modal-dialog
                            // Modal content
                            .modal-content
                                .modal-header
                                    button.close(type='button', data-dismiss='modal') Ã—
                                    h4.modal-title Import Launched
                                .modal-body
                                    ul#job_details
                                .modal-footer
                                    button.btn.btn-default(type='button', data-dismiss='modal') Close

                    .col-lg-12
                        .row
                            .col-lg-6
                                .panel.panel-default
                                    .panel-heading
                                        i.fa.fa-linkedin
                                        | LinkedIn
                                    form(id='job_launch', role='form', action='/graph/import/linkedin' method='POST').panel-body
                                        .form-group
                                            label Name
                                            input.form-control(name='importName')
                                            p.help-block Give your import a name
                                        .form-group
                                            label Username
                                            input.form-control(type='email' name='linkedinEmail')
                                            p.help-block example@domain.com
                                        .form-group
                                            label Password
                                            input.form-control(type='password', name='linkedinPassword')
                                        .form-group
                                            p.help-block Your credentials are not stored
                                        .text-center
                                            button.btn.btn-default(type='submit') Submit
                                .message-panel
                                    .alert.alert-danger.text-center
                                        ul#errors

                            .col-lg-6
                                .panel.panel-default
                                    .panel-heading
                                        i.fa.fa-twitter
                                        | Twitter
                                    form(role='form').panel-body
                                        .form-group
                                            label Text Input
                                            input.form-control
                                            p.help-block Example block-level help text here.
                                        .form-group
                                            label Text Input with Placeholder
                                            input.form-control(placeholder='Enter text')
                                        .form-group
                                            label Static Control
                                            p.form-control-static email@example.com
                                        .form-group
                                            label File input
                                            input(type='file')
                                        .form-group
                                            label Text area
                                            textarea.form-control(rows='3')

                                        button.btn.btn-default(type='submit') Submit




